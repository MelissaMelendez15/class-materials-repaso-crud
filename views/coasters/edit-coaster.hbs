<div class="container">
    <div class="row">
        <div class="col-md-6">
            {{#with coaster}}
            <h1 style="font-weight: 100">Edita {{name}}</h1>
            {{/with}}
        </div>

        <div class="col-md-6">
            {{#with coaster}}
            <form action="/coasters/edit?id={{_id}}" method="POST">
            <div class="form-group">
                <label for="name-input">Nombre</label>
                <input name="name" type="text" value="{{name}}" class="form-control" id="name-input">
            </div>
           
            <div class="form-group">
                <label  for="description-input">Descripción</label>
                <input name="description" type="text" value="{{description}}" class="form-control" id="description-input">
            </div>
            
            <div class="form-group">
                <label for="inversions-input">Inversiones</label>
                <input name="inversions" type="number" value="{{inversions}}" class="form-control" id="inversions-input">
            </div>
            
            <div class="form-group">
                <label for="length-input">Longitud</label>
                <input name="length" type="number" value="{{length}}" class="form-control" id="length-input">
            </div>
            {{/with}}
            
            <div class="form-group">
                {{#with coaster}}
                <label for="park-list">Parque en el que se encuentra: {{park.name}}</label>
                {{/with}}
                <select name="park" class="form-control" id="park-list">
                    <option>Seleccionar el nuevo parque</option>
                    {{#each allParks}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            
        <button type="submit" class="btn btn-dark">Editar montaña rusa</button>
        <a href="/coasters" class="btn btn-dark">Volver</a>
            
         </form>
        </div>
            
    </div>
    </div>